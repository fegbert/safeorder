<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/cartFragment">

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.groupthree.safeorder.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/cart"
        />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.groupthree.safeorder.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/maps"
        />
    <fragment
        android:id="@+id/restaurantOverviewFragment"
        android:name="com.groupthree.safeorder.RestaurantOverviewFragment"
        android:label="RestaurantOverviewFragment"
        tools:layout="@layout/restaurant_overview"
        />
    <fragment
        android:id="@+id/restaurantProfileFragment"
        android:name="com.groupthree.safeorder.RestaurantProfileFragment"
        android:label="RestaurantProfileFragment"
        tools:layout="@layout/restaurant_profile"/>
    <navigation android:id="@+id/userProfileGraph"
        app:startDestination="@id/userProfileFragment">
        <fragment
            android:id="@+id/userProfileFragment"
            android:name="com.groupthree.safeorder.UserProfileFragment"
            android:label="UserProfileFragment"
            tools:layout="@layout/user_profile" >
            <action
                android:id="@+id/action_userProfileFragment_to_settingsFragment"
                app:destination="@id/settingsFragment" />
        </fragment>
        <fragment
            android:id="@+id/settingsFragment"
            android:name="com.groupthree.safeorder.SettingsFragment"
            android:label="SettingsFragment"
            tools:layout="@layout/settings" >
            <action
                android:id="@+id/action_settingsFragment_to_userProfileFragment"
                app:destination="@id/userProfileFragment" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.groupthree.safeorder.NotificationsFragment"
        android:label="NotificationsFragment"
        tools:layout="@layout/notifications"/>
</navigation>